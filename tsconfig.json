{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@db/*": ["src/db/*"],
      "@data-access": ["src/data-access/index"],
      "@graphql/*": ["src/graphql/*"],
      "@generated/*": ["src/generated/*"],
      "@services": ["src/services/index"]
    }
  }
}
